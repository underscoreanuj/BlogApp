<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.anuj.blogapp.PostView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/single_blog_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/insert_photo"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
        <TextView
            android:id="@+id/single_blog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="20dp"
            android:clickable="true"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:padding="10dp"/>
        <TextView
            android:id="@+id/single_blog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content"
            android:textSize="14dp"
            android:padding="10dp"/>
    </LinearLayout>


    <ImageButton
        android:id="@+id/remove_blog_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_delete_forever_black_24dp"
        android:background="@color/colorPrimary"
        android:scaleType="fitCenter"
        android:padding="4dp"
        android:visibility="invisible"
        />

</RelativeLayout>
